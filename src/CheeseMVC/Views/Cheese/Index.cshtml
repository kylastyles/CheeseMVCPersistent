@model List<CheeseMVC.Models.Cheese>

<h1>@ViewBag.Title</h1>

<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Category</th>
        <th>Edit</th>
    </tr>

    @foreach (var cheese in Model)
    {
        <tr>
            <td><b>@cheese.Name</b></td>
            <td>@cheese.Description</td>
            <td>@cheese.Category.Name</td>
            <td><a asp-controller="Cheese" asp-action="Edit" asp-route-cheeseId="@cheese.ID"><span class="glyphicon glyphicon-erase"></span></a></td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <h3>No cheeses yet!</h3>
}

<p><a asp-controller="Cheese" asp-action="Add">Add <span class="glyphicon glyphicon-plus-sign"></span></a> | 
    <a asp-controller="Cheese" asp-action="Remove">Remove <span class="glyphicon glyphicon-minus-sign"></span></a></p>
